{% extends 'dashboard/index.html.twig' %}

{% block content %}
    <div class="col-md-6">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">{{ 'user.edit'|trans }}</h3>
            </div>

            {{ form_start(edit_form) }}
            <div class="box-body">
                {{ form_widget(edit_form) }}
            </div>
            <div class="box-footer">
                <button class="btn btn-primary pull-right" type="submit">{{ 'form.submit'|trans }}</button>
                <a class="btn btn-default" href="{{ path('user_index') }}">{{ 'form.back'|trans }}</a>
            </div>
            {{ form_end(edit_form) }}
            <div class="box-footer">
                {{ form_start(delete_form) }}
                <button class="btn btn-danger delete-button" type="submit">{{ 'form.delete'|trans }}</button>
                {{ form_end(delete_form) }}
            </div>

        </div>
    </div>
{% endblock %}
