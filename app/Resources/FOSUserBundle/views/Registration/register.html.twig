{% trans_default_domain 'FOSUserBundle' %}
{% extends "::base.html.twig" %}

{% block body_wrapper %}
<body class="hold-transition register-page">
{% endblock %}

{% block body %}
<div class="register-box">
    <div class="register-logo">
        <a href="../../index2.html"><b>Symfony3</b>Base</a>
    </div>

    <div class="register-box-body">
        <p class="login-box-msg">Register a new membership</p>

        <form action="{{ path('fos_user_registration_register') }}" method="post">
            <input type="hidden" name="fos_user_registration_form[_token]"
                   value="{{ csrf_token('registration') }}"
            >
            <div class="form-group has-feedback">
                <input type="text" class="form-control" placeholder="Full name" name="fos_user_registration_form[username]">
                <span class="glyphicon glyphicon-user form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                <input type="email" class="form-control" placeholder="Email" name="fos_user_registration_form[email]">
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                <input type="password" class="form-control" placeholder="Password" name="fos_user_registration_form[plainPassword][first]">
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                <input type="password" class="form-control" placeholder="Retype password" name="fos_user_registration_form[plainPassword][second]">
                <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
            </div>
            <div class="row">
                <div class="col-xs-4">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">Register</button>
                </div>
            </div>
        </form>

        <a href="{{ path('fos_user_security_login') }}" class="text-center">I already have a membership</a>
    </div>
    <!-- /.form-box -->
</div>
{% endblock %}








